#!/usr/bin/env shlib

if echo "$((1+1))" > /dev/null 2>&1; then
	calc() { printf '%s\n' "$(($*))"; }
elif hascmd awk; then
	calc() { eval awk "BEGIN{ print $*; }"; }
elif hascmd bc; then
	calc() { printf '%s\n' "$*" | bc; }
else
	die 'no suitable method for doing math'
fi

shlib_main {
	for arg; do
		case "${arg}" in (-h|-help|--help)
			echo 'usage: calc <expression>'
			exit 0
		esac
	done
	calc "${@}"
}

