#!/usr/bin/env shlib

__regex_match() { eval "case \"${2}\" in ($1) return 0;;esac;return 1"; }
alias regex.match='__regex_match'

shlib_main {
	for arg; do
		case "${arg}" in (-h|-help|--help)
			echo "usage: ${0} <pattern> <string>"
			exit 0
		esac
	done
	regex.match "${1}" "${2}"
}

